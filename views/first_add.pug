extends layout

block content
  .main.container
    .row.vertical-align
      .col-md-6.offset-md-3
        br
        h1.display-4.m-b-2 Dopisz siÄ™ do wniosku 
        
        .my-jumbotron
          form(method='POST' action='/first_add')            
            if(courseCodeNotValid)
              div.form-group.has-danger
                label(for='courseCode') Kod przedmiotu:
                input#name.form-control.form-control-danger(type='text',  name='courseCode' required)
                div.form-control-feedback=courseCodeNotValid.msg
            else
              div.form-group
                label(for='courseCode') Kod przedmiotu:
                input#name.form-control(type='text',  name='courseCode' required)
                
            div.form-group
              label(for='courseName') Nazwa kursu:
              input#name.form-control(type='text', name='courseName' required)
              
            div.form-groups
              -var i=1;
              label(for='courseECTS') Punkty ECTS:
              select#name.form-control(name="courseECTS" )
                while i<21
                    option(value=i)=i++
            div.form-group
              label(for='courseKind') Rodzaj kursu:
              select#name.form-control(name="courseKind")
                if(courseKinds)
                  each item in courseKinds
                    option(value=item.ID)=item.nazwaRodzajuKursu
            div.form-group
              -var j=2018;  /*current year */
              -var before;
              -var after;
              label(for='courseYear') Rok akademicki:
              select#name.form-control(name='courseYear')
                while j>2000
                  option(value=j)=j-1+'/'+j--
            div.form-group
              label(for='courseSemester') Semestr:
              select#name.form-control(name="courseSemester")
                if(courseSemesters)
                  each item in courseSemesters
                    option(value=item.ID)=item.nazwaSemestru
            div.invisible
              input(type='submit',id='submit-form-1')
  
    
      .col.col-md-2.offset-1
        label(for='submit-form-1').next-button
          
